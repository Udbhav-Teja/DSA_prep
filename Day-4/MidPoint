//Neeed to take inputs from user....
import java.io.*;
//import java.util.*;

public class MidPoint {
    public static void main (String[] args) {
        //Scanner x1 = new scanner(System.in);
        //System.out.println("Enter the values for x1,x2,y1,y2: ");
		
		int x1 =2, y1 = 4 ;
		int x2 = 10, y2 = 15 ;
		midpoint(x1, x2, y1, y2);
			
	}
	 public static void midpoint(int x1, int x2, int y1, int y2) {
		System.out.print((x1 + x2) / 2 +
						" , " + (y1 + y2) / 2) ;
	}
	
}
